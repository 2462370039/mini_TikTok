<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_li_variety_poster"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="90dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/poster_film" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">



        <TextView
            android:id="@+id/tv_li_variety_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="片名"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>
        <TextView
            android:id="@+id/tv_li_variety_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:singleLine="true"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导演："/>
            <TextView
                android:id="@+id/tv_li_variety_directors"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="徐峥"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_li_variety_discussion_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1047.9万"
                app:drawableLeftCompat="@drawable/ic_hot_24"/>

            <TextView
                android:id="@+id/tv_li_variety_topic_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1047.9万"
                app:drawableLeftCompat="@drawable/ic_hot_24"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>